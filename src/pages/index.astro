---
import BlogCard from "@/components/BlogCard.astro";
import ImageMod from "@/components/ImageMod.astro";
import Base from "@/layouts/Base.astro";
import { getListPage, getSinglePage } from "@/lib/contentParser.astro";
import { sortByDate } from "@/lib/utils/sortFunctions";
import { markdownify } from "@/lib/utils/textConverter";
import { FaCheck } from "react-icons/fa";

const BLOG_FOLDER = "blog";
const PROJECT_FOLDER = "projects";
const homepage = await getListPage("homepage", "-index");

const { banner, projects, latest_posts } = homepage.data;
const posts = latest_posts?.enable ? await getSinglePage(BLOG_FOLDER) : [];
const latestPosts =
  latest_posts?.enable && posts.length > 0
    ? sortByDate([...posts]).slice(0, latest_posts.limit)
    : [];
const projectEntries =
  projects?.enable && !projects?.items?.length
    ? await getSinglePage(PROJECT_FOLDER)
    : [];
const projectItems =
  projects?.items && projects.items.length > 0
    ? projects.items
    : sortByDate([...projectEntries])
        .slice(0, projects?.limit ?? projectEntries.length)
        .map((project) => ({
          title: project.data.title,
          description: project.data.description ?? "",
          image: project.data.image ?? "",
          link: `/${PROJECT_FOLDER}/${project.id}`,
          tags: project.data.tags ?? [],
        }));
---

<Base>
  <!-- Banner -->
  <section class="section p-0">
    <div class="container">
      <div class="row justify-center">
        {
          banner.video && (
            <div class="col-12">
              <video
                autoplay
                class="w-full rounded-2xl bg-light dark:bg-darkmode-light"
                loop
                muted
                playsinline
                poster={banner.poster ?? undefined}
              >
                <source
                  src={banner.video}
                  type="video/mp4"
                />
                เบราว์เซอร์ของคุณไม่รองรับวิดีโอ HTML5
              </video>
            </div>
          )
        }
      </div>
    </div>
  </section>
  <!-- /Banner -->

  <!-- Projects -->
  {
    projects?.enable && projectItems.length > 0 && (
      <section class="section bg-gradient">
        <div class="container">
          <div class="row items-end justify-between gap-y-6">
            <div class="md:col-8">
              <h2
                class="mb-4"
                set:html={markdownify(projects.title)}
              />
              <p
                class="text-lg"
                set:html={markdownify(projects.description)}
              />
            </div>
            {projects.button?.enable && (
              <div class="md:col-auto text-left md:text-right">
                <a
                  class="btn btn-outline-primary"
                  href={projects.button.link}
                >
                  {projects.button.label}
                </a>
              </div>
            )}
          </div>
          <div class="mt-10">
            <div class="swiper project-slider">
              <div class="swiper-wrapper">
                {projectItems.map((item) => (
                  <div class="swiper-slide">
                    <div class="h-full rounded-2xl border border-border bg-body p-6 shadow-sm dark:border-darkmode-border dark:bg-darkmode-body">
                      {item.image && (
                        <ImageMod
                          alt={item.title}
                          class="mb-6 w-full rounded-lg bg-light dark:bg-darkmode-light"
                          format="webp"
                          height={320}
                          src={item.image}
                          width={520}
                        />
                      )}
                      <h3 class="mb-3">
                        <a href={item.link}>{item.title}</a>
                      </h3>
                      <p class="mb-5 text-base text-text dark:text-darkmode-text">
                        {item.description}
                      </p>
                      {item.tags.length > 0 && (
                        <ul class="mb-6 flex flex-wrap gap-2">
                          {item.tags.map((tag) => (
                            <li class="rounded-full border border-border px-3 py-1 text-xs font-semibold uppercase tracking-wide dark:border-darkmode-border">
                              {tag}
                            </li>
                          ))}
                        </ul>
                      )}
                      <a
                        class="btn btn-sm btn-outline-primary"
                        href={item.link}
                      >
                        ดูโปรเจ็กต์
                      </a>
                    </div>
                  </div>
                ))}
              </div>
              <div class="project-slider-pagination mt-9 flex items-center justify-center text-center" />
            </div>
          </div>
        </div>
      </section>
    )
  }
  <!-- /Projects -->

  <!-- Latest Posts -->
  {
    latest_posts?.enable && latestPosts.length > 0 && (
      <section class="section">
        <div class="container">
          <div class="row items-end justify-between gap-y-6">
            <div class="md:col-8">
              <h2
                class="mb-4"
                set:html={markdownify(latest_posts.title)}
              />
              <p
                class="text-lg"
                set:html={markdownify(latest_posts.description)}
              />
            </div>
            <div class="md:col-auto text-left md:text-right">
              <a
                class="btn btn-outline-primary"
                href="/blog"
              >
                ดูบทความทั้งหมด
              </a>
            </div>
          </div>
          <div class="row mt-10">
            {latestPosts.map((post) => (
              <div class="mb-14 md:col-6 lg:col-4">
                <BlogCard data={post} />
              </div>
            ))}
          </div>
        </div>
      </section>
    )
  }
  <!-- /Latest Posts -->
</Base>

<script>
  import { Swiper } from "swiper";
  import "swiper/css";
  import "swiper/css/pagination";
  import { Autoplay, Pagination } from "swiper/modules";

  document.addEventListener("astro:page-load", () => {
    const sliderEl = document.querySelector(".project-slider");
    if (!sliderEl) {
      return;
    }

    new Swiper(sliderEl, {
      modules: [Pagination, Autoplay],
      spaceBetween: 24,
      loop: true,
      autoplay: {
        delay: 3000,
        disableOnInteraction: false,
      },
      pagination: {
        el: ".project-slider-pagination",
        type: "bullets",
        clickable: true,
      },
      breakpoints: {
        768: {
          slidesPerView: 2,
        },
        1024: {
          slidesPerView: 3,
        },
      },
    });
  });
</script>
